$default
  opacity : 1
  left    : 0
  top     : 0

#Stack
  width            : 500px
  height           : 300px
  background-color : lightgray
  overflow         : hidden

  > *
    transition : opacity 1s, left 1s, top 1s
    position   : relative
    opacity    : 0

  .current
    @extend $default

  .next.transition-in-slide
    @extend $default
    left    : 500

  .previous.transition-out-slide
    @extend $default
    left    : -500

  .next.transition-in-slide-up
    @extend $default
    top : 500

  .previous.transition-out-slide-up
    @extend $default
    top : -500


  .after, .before
    visibility : hidden

