*, *:before, *:after {
  box-sizing: border-box;
}

$default
  opacity : 1
  left    : 0
  top     : 0

// individual elements
.stack-element
  transition : opacity 1s, left 1s, top 1s
  position   : absolute
  opacity    : 0
  width      : 100%
  height     : 100%

#Stack
  width            : 500px
  height           : 300px
  background-color : lightgray
  overflow         : hidden
  position         : relative

  > .layer
    position : absolute
    width    : 100%
    height   : 100%



  .current
    @extend $default

  .next.transition-in-slide
    @extend $default
    left    : 500px

  .previous.transition-out-slide
    @extend $default
    left    : -500px

  .next.transition-in-slide-up
    @extend $default
    top : 500px

  .previous.transition-out-slide-up
    @extend $default
    top : -500px

  // these shoudd have .direction--forward
  for num in (1..40)
    value = num * 100ms
    .current.delay-in-{value}
      transition-delay : value
    .current.duration-in-{value}
      transition-duration : value

  .after, .before
    visibility : hidden


#Timeline
  .num
    display: inline-block
    width: 20px
  .headers
    .num
      visibility: hidden
    .block-hint
      text-align: center
      background-color: white

  .layer
    background-color: lightgray
    display: inline-block
    height: 22px
    position: relative
  .block-hint
    display: inline-block
    width: 80px
    height: 22px
    background-color: #dddddd
    margin-right: -4px

  .asset
    position: absolute
    top: 0
    background-color: pink
    width: 80px
    height: 22px
    overflow: hidden
    border: red 1px solid